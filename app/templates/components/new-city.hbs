{{#if addNewCity}}
<div>
  <form>
    <div class="form-group">
      <label for="name">New City</label>
      {{input value=name id="name"}}
    </div>
    <div class="form-group">
      <label for="country">Country</label>
      {{input value=country id="country"}}
    </div>
        <button {{action 'saveCity'}}>Save</button>
  </form>
</div>
{{else}}
    <button {{action 'cityFormShow'}}>New City</button>
{{/if}}
